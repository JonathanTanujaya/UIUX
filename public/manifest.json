  "shortcuts": [
    {
      "name": "Add New Item",
      "short_name": "Add Item",
      "description": "Quickly add new inventory item with barcode scanning",
      "url": "/barang/add",
      "icons": [
        {
          "src": "/icons/shortcut-add.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Check Stock",
      "short_name": "Stock",
      "description": "Check current stock levels with offline support",
      "url": "/stock",
      "icons": [
        {
          "src": "/icons/shortcut-stock.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Sales Entry",
      "short_name": "Sales",
      "description": "Quick sales entry with mobile optimization",
      "url": "/sales/add",
      "icons": [
        {
          "src": "/icons/shortcut-sales.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Purchase Orders",
      "short_name": "Orders",
      "description": "View and manage purchase orders",
      "url": "/purchasing/orders",
      "icons": [
        {
          "src": "/icons/shortcut-orders.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Main Dashboard Desktop View"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard with Touch Navigation"
    },
    {
      "src": "/screenshots/mobile-barcode.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Barcode Scanner Interface"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+stoir",
      "url": "/handle?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", ".csv", ".xlsx", ".xls", "image/*"]
        }
      ]
    }
  }
}
